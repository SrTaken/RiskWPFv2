<Page x:Class="RiskWPF.SalaCreationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RiskWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SalaCreationPage">

    <Grid>
        <Border Margin="50"
            CornerRadius="30"
            BorderThickness="3"
            BorderBrush="Gray"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
            <Border.Background>
                <ImageBrush ImageSource="Assets/madera.jpg" Stretch="UniformToFill"/>
            </Border.Background>

            <Grid Margin="35">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                       Text="Creacion de Lobby"
                       FontFamily="Old English Text MT"
                       FontSize="38"
                       FontWeight="Bold"
                       Foreground="#FFD700"
                       Margin="0,0,0,15"
                       HorizontalAlignment="Center"/>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="Nombre:" VerticalAlignment="Center"
                           FontFamily="Old English Text MT"
                           FontSize="22"
                           Foreground="#FFD700"
                           Margin="0,0,12,0"/>
                    <TextBox
                            x:Name="txtNombreLobby"
                            Width="120"
                            Text="Nombre"
                            FontFamily="Old English Text MT"
                            FontSize="18"
                            Foreground="#384"
                            Background="#FFF9E5" />
                </StackPanel>

                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Cancelar"
                        Background="#9C3434"
                        Foreground="#FFD700"
                        BorderBrush="#FFD700"
                        FontFamily="Old English Text MT"
                        FontSize="22"
                        FontWeight="Bold"
                        Width="120"
                        Height="45"
                        Margin="0,0,20,0"
                        Cursor="Hand"
                        x:Name="btnCancelar"
                        Click="btnCancelar_Click"/>
                    <Button Content="Crear"
                        Background="#27C049"
                        Foreground="White"
                        BorderBrush="#129225"
                        FontFamily="Old English Text MT"
                        FontSize="22"
                        FontWeight="Bold"
                        Width="150"
                        Height="45"
                        Margin="10,0"
                        Cursor="Hand"
                        x:Name="btnCrear"
                        Click="btnCrear_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
