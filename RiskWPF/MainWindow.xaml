<Window x:Class="RiskWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RiskWPF"
        mc:Ignorable="d"
               Title="Risk - Login" Height="600" Width="800"
        WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Border Background="#8B4513" 
                BorderBrush="#8B4513" 
                BorderThickness="10" 
                CornerRadius="10" 
                Margin="50" 
                Opacity="0.9">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="5" Direction="315" Color="Black" Opacity="0.5" BlurRadius="10"/>
            </Border.Effect>

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Risk: Conquista Mundial" 
                           FontFamily="Old English Text MT" 
                           FontSize="48" 
                           Foreground="#FFD700" 
                           HorizontalAlignment="Center" 
                           Margin="0,20,0,40">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="2" Opacity="0.7"/>
                    </TextBlock.Effect>
                </TextBlock>

                <StackPanel Grid.Row="1" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Width="300">
                    <TextBlock Text="Nombre del Comandante" 
                               FontFamily="Garamond" 
                               FontSize="18" 
                               Foreground="#2C1A0E" 
                               Margin="0,0,0,10"/>
                    <TextBox x:Name="UsernameTextBox" 
                             Height="45"       
                           Text="test1"
                             Background="#FFF8DC" 
                             BorderBrush="#8B4513" 
                             BorderThickness="2" 
                             FontSize="16" 
                             Padding="10" 
                             Foreground="#2C1A0E">
                        <TextBox.Effect>
                            <DropShadowEffect ShadowDepth="1" Direction="315" Color="Black" Opacity="0.3"/>
                        </TextBox.Effect>
                    </TextBox>

                    <TextBlock Text="Clave de Estrategia" 
                               FontFamily="Garamond" 
                               FontSize="18" 
                               Foreground="#2C1A0E" 
                               Margin="0,20,0,10"/>
                    <PasswordBox x:Name="PasswordBox" 
                                 Height="45" 
                                 Password="1234"
                                 Background="#FFF8DC" 
                                 BorderBrush="#8B4513" 
                                 BorderThickness="2" 
                                 FontSize="16" 
                                 Padding="10" 
                                 Foreground="#2C1A0E">
                        <PasswordBox.Effect>
                            <DropShadowEffect ShadowDepth="1" Direction="315" Color="Black" Opacity="0.3"/>
                        </PasswordBox.Effect>
                    </PasswordBox>
                </StackPanel>

                <StackPanel Grid.Row="2" 
                            HorizontalAlignment="Center" 
                            Orientation="Horizontal" 
                            Margin="0,30,0,20">
                    <Button x:Name="LoginButton" 
                            Content="Batalla" 
                            Width="200" 
                            Height="50" 
                            Background="#8B4513" 
                            Foreground="White" 
                            FontFamily="Garamond" 
                            FontSize="18" 
                            BorderBrush="#654321" 
                            BorderThickness="2" 
                            Margin="0,0,20,0" 
                            Click="LoginButton_Click">
                        <Button.Effect>
                            <DropShadowEffect ShadowDepth="3" Direction="315" Color="Black" Opacity="0.5"/>
                        </Button.Effect>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                        CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button x:Name="ExitButton" 
                            Content="Abandonar" 
                            Width="100" 
                            Height="50" 
                            Background="#654321" 
                            Foreground="White" 
                            FontFamily="Garamond" 
                            FontSize="18" 
                            BorderBrush="#4A2C0F" 
                            BorderThickness="2" 
                            Click="ExitButton_Click">
                        <Button.Effect>
                            <DropShadowEffect ShadowDepth="3" Direction="315" Color="Black" Opacity="0.5"/>
                        </Button.Effect>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                        CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
