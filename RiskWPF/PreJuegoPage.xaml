<Page x:Class="RiskWPF.PreJuegoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RiskWPF"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PreJuegoPage">

    <Grid>
        <Border Margin="50"
                CornerRadius="30"
                BorderThickness="3"
                BorderBrush="Gray"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Background>
                <ImageBrush ImageSource="Assets/madera.jpg" Stretch="UniformToFill"/>
            </Border.Background>

            <Grid Margin="35">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Lobby de jugadores"
                           FontFamily="Old English Text MT"
                           FontSize="38"
                           FontWeight="Bold"
                           Foreground="#FFD700"
                           Margin="0,0,0,15"
                           HorizontalAlignment="Center"/>

                <!-- Lista de jugadores -->
                <ListBox x:Name="lbJugadores"
                         Grid.Row="1"
                         Margin="0,0,0,10"
                         MinHeight="120"
                         Background="#C9FFFFFF"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="6,3">
                                <TextBlock Text="{Binding Nombre}"
                                           FontSize="18"
                                           FontFamily="Old English Text MT"
                                           FontWeight="Bold"
                                           Foreground="#222"
                                           Width="150"/>
                                <TextBlock Text="{Binding Color}"
                                           FontSize="16"
                                           Foreground="#6B4F27"
                                           Margin="10,0,0,0"/>
                                <TextBlock Text="{Binding Estado}"
                                           FontSize="16"
                                           Foreground="#008800"
                                           Margin="10,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- ComboBox de color -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="Color:" VerticalAlignment="Center"
                               FontFamily="Old English Text MT"
                               FontSize="22"
                               Foreground="#FFD700"
                               Margin="0,0,12,0"/>
                    <ComboBox
                        Width="120"
                        FontFamily="Old English Text MT"
                        FontSize="18"
                        Foreground="#384"
                        Background="#FFF9E5"
                        SelectedItem="{Binding Color}"
                        x:Name="cboColor" />
                </StackPanel>

                <!-- Botones -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Salir"
                            Background="#9C3434"
                            Foreground="#FFD700"
                            BorderBrush="#FFD700"
                            FontFamily="Old English Text MT"
                            FontSize="22"
                            FontWeight="Bold"
                            Width="120"
                            Height="45"
                            Margin="0,0,20,0"
                            Cursor="Hand"
                            x:Name="btnSalir"
                            Click="btnSalir_Click"/>
                    <Button Content="Listo"
                            Background="#27C049"
                            Foreground="White"
                            BorderBrush="#129225"
                            FontFamily="Old English Text MT"
                            FontSize="22"
                            FontWeight="Bold"
                            Width="150"
                            Height="45"
                            Margin="10,0"
                            Cursor="Hand"
                            x:Name="btnListo"
                            Click="btnListo_Click"/>
                    <Button Content="Iniciar"
                            Background="#444"
                            Foreground="#FFD700"
                            BorderBrush="#FFD700"
                            FontFamily="Old English Text MT"
                            FontSize="22"
                            FontWeight="Bold"
                            Width="150"
                            Height="45"
                            Margin="10,0"
                            Cursor="Hand"
                            x:Name="btnIniciar"
                            Click="btnInciar_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>