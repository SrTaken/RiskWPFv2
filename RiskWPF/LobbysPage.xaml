<Page x:Class="RiskWPF.LobbysPage"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          Title="LobbysPage">

    <Grid>
        <Border Margin="50"
                    CornerRadius="30"
                    BorderThickness="3"
                    BorderBrush="Gray"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <Border.Background>
                <ImageBrush ImageSource="Assets/madera.jpg" Stretch="UniformToFill"/>
            </Border.Background>

            <Grid Margin="35">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                               Text="Lobby de partidas"
                               FontFamily="Old English Text MT"
                               FontSize="38"
                               FontWeight="Bold"
                               Foreground="#FFD700"
                               Margin="0,0,0,15"
                               HorizontalAlignment="Center"/>

                <TextBlock Grid.Row="1"
                               Text="Elige un lobby para unirte"
                               FontFamily="Old English Text MT"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#FFD700"
                               Margin="0,0,0,15"
                               HorizontalAlignment="Center"/>

                <ListView x:Name="lvLobbys"
                              Grid.Row="2"
                              Margin="0,0,0,10"
                              MinHeight="120"
                              Background="#C9FFFFFF"
                              BorderThickness="0"
                              HorizontalContentAlignment="Center"
                              SelectionChanged="lvLobbys_SelectionChanged"
                              ScrollViewer.VerticalScrollBarVisibility="Visible"
                              MaxHeight="225">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,3"
                                        Padding="10,6"
                                        CornerRadius="10"
                                        Background="#FFFCEFDE"
                                        BorderBrush="#FFF2C77F"
                                        BorderThickness="2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="260"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="110"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Nombre}"
                                                   FontSize="20"
                                                   FontFamily="Old English Text MT"
                                                   FontWeight="Bold"
                                                   Foreground="#222"
                                                   Grid.Column="0" VerticalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding Jugadores.Count}" 
                                                       FontSize="18" FontWeight="Bold"
                                                       FontFamily="Old English Text MT"
                                                       Foreground="#42dc40"/>
                                        <TextBlock Text="/" 
                                                       FontSize="18"
                                                       FontFamily="Old English Text MT"
                                                       Foreground="#FFD700" Margin="3,0"/>
                                        <TextBlock Text="{Binding MaxJugadores}"
                                                       FontSize="18" 
                                                       FontFamily="Old English Text MT"
                                                       Foreground="#FFD700"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Salir"
                        Background="#9C3434"
                        Foreground="#FFD700"
                        BorderBrush="#FFD700"
                        FontFamily="Old English Text MT"
                        FontSize="22"
                        FontWeight="Bold"
                        Width="120"
                        Height="45"
                        Margin="0,0,20,0"
                        Cursor="Hand"
                        x:Name="btnSalir"
                        Click="btnSalir_Click"/>
                    <Button Content="Actualizar"
                                Background="#444"
                                Foreground="#FFD700"
                                BorderBrush="#FFD700"
                                FontFamily="Old English Text MT"
                                FontSize="22"
                                FontWeight="Bold"
                                Width="130"
                                Height="45"
                                Margin="0,0,15,0"
                                Cursor="Hand"
                                x:Name="btnActualizar"
                                Click="btnActualizar_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>