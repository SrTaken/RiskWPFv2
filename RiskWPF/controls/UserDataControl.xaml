<UserControl x:Class="RiskWPF.controls.UserDataControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RiskWPF.controls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300"
             x:Name="ucUser">
    <Grid>
        <Border Margin="30" CornerRadius="30" BorderThickness="3" BorderBrush="Gray" x:Name="MainBorder">
            <Border.Background>
                <ImageBrush ImageSource="../Assets/madera.jpg"/>
            </Border.Background>
            <TextBlock Text="{Binding ElementName=ucUser, Path=MyUser.Username, FallbackValue=UserNoName}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="20" Foreground="Wheat" FontSize="20"  />
        </Border>
        </Grid>
</UserControl>
