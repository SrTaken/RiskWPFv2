<Page x:Class="RiskWPF.JuegoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RiskWPF" xmlns:controls="clr-namespace:RiskWPF.controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="JuegoPage">

    <Grid Background="AntiqueWhite" x:Name="gridPrincipal">
        <Image x:Name="MapaVisible" Source="Assets/Risk_board.png" MouseLeftButtonDown="MapaVisible_MouseLeftButtonDown" MouseMove="MapaVisible_MouseMove"/>
        <Canvas x:Name="OverlayCanvas" IsHitTestVisible="False"/>
        <Canvas x:Name="OverlayCanvasHover" IsHitTestVisible="False"/>

        <Grid VerticalAlignment="Center" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <controls:D6Control Width="150" Height="150" MyNumber="5" x:Name="DadoIzquierdo1" Grid.Row="1"/>
            <controls:D6Control Width="150" Height="150" MyNumber="2" x:Name="DadoIzquierdo2" Grid.Row="2"/>
            <controls:D6Control Width="150" Height="150" MyNumber="3" x:Name="DadoIzquierdo3" Grid.Row="3"/>

            <controls:D6Control Width="150" Height="150" MyNumber="4" x:Name="DadoDerecho1" Grid.Row="1" Grid.Column="1"/>
            <controls:D6Control Width="150" Height="150" MyNumber="6" x:Name="DadoDerecho2" Grid.Row="2" Grid.Column="1"/>
            <controls:D6Control Width="150" Height="150" MyNumber="1" x:Name="DadoDerecho3" Grid.Row="3" Grid.Column="1"/>
        </Grid>
    </Grid>
</Page>
